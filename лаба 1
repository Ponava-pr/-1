.op-btn {
    width: 70px;
    height: 45px;
    font-size: 24px;
    border: none;
    margin-right: 3px;
    cursor: pointer;
    color: white;

    background: linear-gradient(to bottom, #7db2ff, #002dff);
    border-radius: 3px;
}

.op-btn.active {
    outline: 3px solid white;
    border: 2px solid blue;
}

const firstNumber = document.getElementById('firstNumber');
const secondNumber = document.getElementById('secondNumber');
const result = document.getElementById('result');
const opButtons = document.querySelectorAll('.op-btn');

let currentOperator = '+';

function calculate() {
    const num1 = parseFloat(firstNumber.textContent);
    const num2 = parseFloat(secondNumber.textContent);

    if (isNaN(num1) || isNaN(num2)) {
        result.textContent = "";
        return;
    }

    let out;

    switch (currentOperator) {
        case "+": out = num1 + num2; break;
        case "-": out = num1 - num2; break;
        case "*": out = num1 * num2; break;
        case "/": out = num2 !== 0 ? num1 / num2 : "Ошибка"; break;
    }

    result.textContent =
        out === "Ошибка" ? out : out.toFixed(2);
}

opButtons.forEach(btn => {
    btn.addEventListener("click", () => {
        opButtons.forEach(b => b.classList.remove("active"));
        btn.classList.add("active");
        currentOperator = btn.textContent;
        calculate();
    });
});

[firstNumber, secondNumber].forEach(el => {
    el.addEventListener("input", calculate);
});
